<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_item_country_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/standard_s_small_margin"
        android:paddingLeft="@dimen/standard_s_small_margin"
        android:paddingTop="@dimen/standard_s_small_margin" />

    <TextView
        android:id="@+id/tv_item_country_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/standard_micro_margin"
        android:layout_marginRight="@dimen/standard_s_small_margin"
        android:layout_toRightOf="@id/iv_item_country_selector"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/text_size1" />
</RelativeLayout>